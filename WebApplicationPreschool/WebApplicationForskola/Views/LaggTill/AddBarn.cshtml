@model WebApplicationForskola.ServiceReference2.BarnTable
@{
    ViewBag.Title = "AddBarn";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Vardnadshavare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin-top: 30px;
        }
        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            float: right;
        }
        input[value] {
            font-size: large;
        }
        input[type=submit]:hover {
            background-color: #45a049;
        }
        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            box-shadow: 3px 5px 5px black;
        }
        h1 {
            font-family: 'Oswald', sans-serif;
        }
        .button {
            background-color: #339CFF;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: large;
            float: left;
            text-decoration: none
        }
    </style>
</head>
<body>
    <hr />
    <h1>Registrera ditt barn</h1>
    <hr />
    @using (Html.BeginForm())
    {
        <p><h2>Barnets fyra sista siffror:</h2></p>
        <a><h3>@Html.TextBoxFor(m => m.Bfyrasiffror)</h3></a>
        <p><h2>Födelsedatum för barnet:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Bfodelsedatum)</h3></p>
        <p><h2>Fornamn:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Bfornamn)</h3></p>
        <p><h2>Efternamn:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Befternamn)</h3></p>
        <p><h2>Postnummer:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Bpostnummer)</h3></p>
        <p><h2>Postadress:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Bpostadress)</h3></p>
        <p><h2>Postort:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Bpostort)</h3></p>
        <p><h2>Forskola:</h2></p>
        <p><h4>Välj förskola(Renen, Snödroppen, Villan)</h4> </p>
        <p><h3>@Html.EditorFor(m => m.Forskola)</h3></p>
        <br />
        <hr />
        <h1>Registrera vårdnadshavare</h1>
        <hr />
        <br />
        <p><h2>Vårdnadshavarens fyra sista siffror:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vfyrasiffror)</h3></p>
        <p><h2>Födelsedatum för vårdnadshavare:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vfodelsedatum)</h3></p>
        <p><h2>Fornamn:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vfornamn)</h3></p>
        <p><h2>Efternamn:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vefternamn)</h3></p>
        <p><h2>Postnummer:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vpostnummer)</h3></p>
        <p><h2>Postadress:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vpostadress)</h3></p>
        <p><h2>Postort:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vpostort)</h3></p>
        <p><h2>Hemtelefon:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vhemtelefon)</h3></p>
        <p><h2>Mobiltelefon:</h2></p>
        <p><h3>@Html.EditorFor(m => m.Vmobiltelefon)</h3></p>
        <br />
        @Html.ActionLink("Avbryt", "Anvandare", "Anvandare", routeValues: null, htmlAttributes: new { @class = "button" })
        <br />
        <br />
        <input type="submit" value="Skicka ansökan" />
        <br />
        <br />
        <br />
        <br />
    }
</body>
</html>